<Window x:Class="MazeMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeMVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <Grid Width="140" Height="160" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Top="120" Canvas.Left="185">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="bSP" Content="Single Player" FontSize="16" Grid.Row="0" Height="35" Click="bSP_Click"/>
            <Button x:Name="bMP" Content="Multi Player" FontSize="16" Grid.Row="1" Height="35" Click="bMP_Click"/>
            <Button x:Name="bSettings" Content="Settings" FontSize="16" Grid.Row="2" Height="35" Click="bSettings_Click"/>
        </Grid>
        <Image Width="240" Canvas.Left="20" Canvas.Top="20" Source="mazeLogo.png"/>
    </Canvas>

</Window>
