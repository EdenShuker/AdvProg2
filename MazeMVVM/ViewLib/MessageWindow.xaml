<Window x:Class="MazeMVVM.ViewLib.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeMVVM.ViewLib"
        mc:Ignorable="d"
        Title="MessageWindow" Height="300" Width="400">
    <Grid>
        <TextBlock x:Name="tbMessage" Text="{Binding Message}" FontSize="18" HorizontalAlignment="Left" Height="50" Margin="72,85,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="263"/>

    </Grid>
</Window>
